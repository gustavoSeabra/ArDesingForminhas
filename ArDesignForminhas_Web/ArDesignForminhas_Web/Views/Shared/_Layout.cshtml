<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ar Desing Forminhas</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetalert")
    @Scripts.Render("~/bundles/jqueryMask")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/fontawesome")
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-xl navbar-light bg-light">
        <div class="container">
            <!-- Brand -->
            <a href='@Url.Action("Index", "Home")' class="navbar-brand d-xl-none">
                <img src="~/Content/Imagens/Logo_SemFundo.png" width="70" height="40" />
                Ar Desing Forminhas
            </a>
            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="p-2">@Html.ActionLink("Início", "Index", "Home")</li>
                    <li class="p-2">@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li class="p-2">@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
                <a href='@Url.Action("Index", "Home")' class="navbar-brand mx-auto d-none d-xl-block">
                    <img src="~/Content/Imagens/Logo_SemFundo.png" width="70" height="40" />
                    Ar Desing Forminhas
                </a>
            </div>
        </div>
    </nav>
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Ar Desing Forminhas</p>
    </footer>


</body>
</html>
